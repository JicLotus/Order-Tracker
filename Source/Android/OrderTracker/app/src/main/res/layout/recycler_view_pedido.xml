<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_producto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/activity_horizontal_margin">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados de 6 numeros.Dados de 6 numeros.Dados de 6 numeros.Dados de 6 numeros.Dados de 6 numeros.Dados de 6 numeros"
                android:textColor="@color/negro"
                android:id="@+id/nombreProducto"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio unitario: $300"
                android:id="@+id/precio"
                android:gravity="bottom"
                android:textSize="15sp"
                android:layout_below="@id/nombreProducto"
                android:paddingTop="@dimen/standard_padding"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: 3"
                android:id="@+id/cantidad"
                android:gravity="bottom"
                android:textSize="15sp"
                android:layout_below="@id/precio"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $900"
                android:id="@+id/subtotal"
                android:gravity="bottom"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/cantidad"
                />




        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>

