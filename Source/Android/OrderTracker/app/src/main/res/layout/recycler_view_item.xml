<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/nPicker"
        android:id="@+id/cv_producto"
        android:layout_alignBottom="@+id/nPicker">


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/iconoCarro">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imagenProducto"
                android:scaleType="fitXY"
                android:src="@drawable/monitor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados de 6 numeros"
                android:textColor="@color/negro"
                android:id="@+id/nombreProducto"
                android:layout_toRightOf="@+id/imagenProducto"
                android:layout_alignParentTop="true"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$300"
                android:id="@+id/caracteristicasProductos"
                android:layout_toRightOf="@+id/imagenProducto"
                android:gravity="bottom"
                android:textSize="30sp"
                android:layout_below="@+id/nombreProducto"
                />





        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <NumberPicker
        android:id="@+id/nPicker"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

