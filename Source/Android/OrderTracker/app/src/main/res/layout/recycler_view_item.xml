<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_producto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imagenProducto"
                android:scaleType="fitXY"
                android:src="@drawable/monitor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <NumberPicker
                android:id="@+id/nPicker"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="right"

                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados de 6 numeros hechos de material sumamente resistente"
                android:id="@+id/nombreProducto"
                android:layout_toLeftOf="@id/nPicker"
                android:layout_toRightOf="@id/imagenProducto"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/negro"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$300"
                android:id="@+id/caracteristicasProductos"
                android:layout_toRightOf="@id/imagenProducto"
                android:gravity="bottom"
                android:textSize="19sp"
                android:layout_below="@id/nombreProducto"
                android:paddingTop="@dimen/standard_padding"
                android:layout_toLeftOf="@id/nPicker"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/verde"
                    android:id="@+id/precioFinal"
                    android:layout_toRightOf="@id/imagenProducto"
                    android:gravity="bottom"
                    android:text="$250"
                    android:textSize="19sp"
                    android:layout_below="@id/caracteristicasProductos"
                    android:paddingTop="@dimen/standard_padding"
                    android:layout_toLeftOf="@id/nPicker"
                    />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal: $0"
                android:id="@+id/subtotal"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imagenProducto"
                android:gravity="bottom"
                android:textSize="17sp"
                android:layout_below="@id/precioFinal"
                android:paddingTop="@dimen/standard_padding"
                android:layout_toLeftOf="@id/nPicker"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/negro"
                android:id="@+id/descuento"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imagenProducto"
                android:gravity="bottom"
                android:textSize="13sp"
                android:layout_below="@id/subtotal"
                android:paddingTop="@dimen/standard_padding"
                android:layout_toLeftOf="@id/nPicker"
                />





    </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>

