
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

            <LinearLayout
                android:id="@+id/linear_imagenes"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="horizontal" >
            </LinearLayout>

        </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/precio_DetalleP"
        android:layout_below="@+id/horizontal_scroll"
        android:text="$300"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textColor="@color/negro"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/nombre_detalleP"
        android:textStyle="bold"
        android:text="Juego de Dados"
        android:layout_below="@+id/precio_DetalleP"
        android:textColor="@color/negro"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/nombre_detalleP"
        android:textStyle="bold"
        android:text="Descripción"
        android:id="@+id/desc"
        android:textColor="@color/negro"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/descripcion_detalleP"
        android:text="Descripciom"
        android:textColor="@color/negro"
        android:layout_below="@+id/desc"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_below="@+id/descripcion_detalleP"
        android:text="14 Disponibles"
        android:id="@+id/stock_detalleP"
        android:textColor="@color/negro"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/marca_detalleP"
        android:textColor="@color/negro"
        android:textStyle="bold"
        android:text="Producto Elaborado por Hasbro S.A."
        android:layout_below="@+id/stock_detalleP"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/marca_detalleP"
        android:text="Categoría"
        android:id="@+id/categ"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/categoria_detalleP"
        android:text="Juguetería"
        android:textColor="@color/negro"
        android:layout_below="@+id/categ"
        android:layout_height="wrap_content" />


</RelativeLayout>
</ScrollView>