<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tdp2.ordertracker.MenuInicial">

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:id="@+id/button"
            android:background="@color/primary"
            android:textColor="@color/primary_text_material_dark"
            android:layout_centerHorizontal="true"
            android:onClick="verProductos"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Clientes"
            android:id="@+id/button2"
            android:background="@color/primary"
            android:textColor="@color/primary_text_material_dark"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:onClick="verClientes"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Agenda"
            android:id="@+id/button3"
            android:background="@color/primary"
            android:textColor="@color/primary_text_material_dark"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:onClick="verAgenda"/>

    </RelativeLayout>

    <ListView android:id="@+id/drawer_izquierdo"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/accent"
        android:elevation="16dp"/>
</android.support.v4.widget.DrawerLayout>